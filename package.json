{
  "name": "enquetes-node-api",
  "version": "1.0.0",
  "description": "Projeto de estudos que tem por objetivo criar uma API de enquetes em Node.JS",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/main/server.js",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc",
    "up": "npm run build && sudo docker compose up",
    "down": "sudo docker-compose down",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- -c jest-unit-config.js",
    "test:integration": "npm test -- -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "lint": "eslint 'src/**' --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "4.17.14",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^16.18.50",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/validator": "^13.12.2",
    "coveralls": "^3.1.1",
    "eslint-config-love": "44.0.0",
    "git-commit-msg-linter": "2.3.11",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.0",
    "rimraf": "^5.0.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@graphql-tools/utils": "^7.1.5",
    "apollo-server-express": "^3.0.0",
    "bcrypt": "^5.1.1",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "graphql": "^15.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.12.0"
  },
  "engines": {
    "node": "18.20.5"
  }
}
